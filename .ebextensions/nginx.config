files:
  /etc/nginx/conf.d/redirect.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      # Redirect HTTP To HTTPS

      http {
        server {
          listen 81;
          rewrite ^ https://$host$request_uri permanent;
        }

        server {
          listen 80;
          location / {
            proxy_pass http://localhost:5000
          }
        }
      }

commands:
  nginx_reload:
    command: "/sbin/service nginx reload"