files:
  /etc/nginx/conf.d/redirect.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      # Redirect HTTP To HTTPS

      server {
        listen 80;
        if ($http_x_forwarded_proto != https) {
          return 301 https://api-flask.uhucream-takashi.pictures$request_uri;
        }
      }