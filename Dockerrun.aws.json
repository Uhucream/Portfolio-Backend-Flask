{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "flask-src",
      "host": {
        "sourcePath": "/var/app/current/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "flask",
      "image": "python:3.8",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 8000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "flask-src",
          "containerPath": "/usr/src/",
          "readOnly": true
        }
      ],
       "logConfiguration": {
         "logDriver": "awslogs",
         "options": {
           "awslogs-region": "us-west-2",
           "awslogs-group": "eb-flask-docker-log"
         }
       },
      "workingDirectory": "/usr/src/app",
      "entryPoint": [
        "/bin/sh",
        "-c",
        "pip install -r /usr/src/requirements.txt"
      ],
      "command": ["/bin/bash", "-c", "flask db migrate && flask db upgrade && gunicorn -c gunicorn_settings.py application:app"]
    }
  ]
}