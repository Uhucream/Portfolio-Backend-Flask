{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "flask-src",
      "host": {
        "sourcePath": "/var/app/current/app"
      }
    },
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "flask",
      "image": "633999724589.dkr.ecr.us-west-2.amazonaws.com/portfolio-flask-backend_flask:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "flask-src",
          "containerPath": "/usr/src/app"
        },
        {
            "sourceVolume": "awseb-logs-flask",
            "containerPath": "/var/log/flask"
        }
      ],
       "logConfiguration": {
         "logDriver": "awslogs",
         "options": {
           "awslogs-region": "us-west-2",
           "awslogs-group": "eb-flask-docker-log"
         }
       },
      "workingDirectory": "/usr/src/app",
      "command": ["/bin/sh", "-c", "flask db upgrade && gunicorn -c /usr/src/app/gunicorn_settings.py /usr/src/app/application:app"]
    },
    {
      "name": "nginx",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "dependsOn": [
        {
          "containerName": "flask",
          "condition": "START"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ],
      "links": [
        "flask"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "us-west-2",
          "awslogs-group": "eb-nginx-docker-log"
        }
      }
    }
  ]
}