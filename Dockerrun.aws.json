{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "flask-src",
      "host": {
        "sourcePath": "/var/app/current/app"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/docker/web"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "flask",
      "image": "633999724589.dkr.ecr.us-west-2.amazonaws.com/portfolio-flask-backend_flask:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "flask-src",
          "containerPath": "/usr/src/app"
        },
        {
            "sourceVolume": "awseb-logs-flask",
            "containerPath": "/var/log/flask"
        }
      ],
      "workingDirectory": "/usr/src/app",
      "command": ["/bin/bash", "-c", "flask db migrate && flask db upgrade && gunicorn -c /usr/src/app/gunicorn_settings.py /usr/src/app/application:app"]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "flask"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d/",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}