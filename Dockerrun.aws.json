{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "flask-src",
      "host": {
        "sourcePath": "/var/app/current/app"
      }
    },
    {
      "name": "nginx-src",
      "host": {
        "sourcePath": "/var/app/current/Docker/web/default.conf"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "portfolio-flask",
      "image": "python:3.8",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "app",
          "containerPath": "/usr/src/app",
          "readOnly": true
        }
      ],
      "workingDirectory": "/usr/src/app",
      "command": ["./startup.sh"]
    },
    {
      "name": "portfolio-nginx",
      "image": "nginx:1.16-alpine",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-src",
          "containerPath": "/etc/nginx/conf.d/default.conf",
          "readOnly": true
        },
        {
          "sourceVolume": "elastic-beanstalk-nginx-logs",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}